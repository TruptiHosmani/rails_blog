<div class="container mx-auto ">

    <div class="text-xl font-bold">
    Articles
    </div>
    <ul class="list-disc">
    <% @articles.each do |article| %>
        <li>
        <a href="/articles/<%= article.id %>">
            <%= article.title %>
        </a>
        </li>
    <% end %>
    </ul>


    <%= link_to "New Article", new_article_path, class: "px-4 py-1 my-5 text-sm text-blue-600 font-semibold rounded-full border border-blue-200 hover:text-white hover:bg-blue-600 hover:border-transparent focus:outline-none focus:ring-2 focus:ring-blue-600 focus:ring-offset-2" %>
</div>
